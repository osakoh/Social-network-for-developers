{
  "name": "code-network",
  "version": "1.0.0",
  "description": "Social network for coders",
  "main": "server.js",
  "scripts": {
    "client-install": "cd .. && npm  install --prefix frontend",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd .. && npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false cd .. && npm install --prefix frontend && npm run build"
  },
  "author": "Michael Osakoh",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^6.1.0",
    "express": "^4.17.1",
    "gravatar": "^1.8.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.7",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  }
}
